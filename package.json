{
    "name": "short-video-encoder",
    "version": "1.0.0",
    "description": "Upload + worker for ABR CMAF (fMP4) DASH/HLS generation (TypeScript, Node, Express)",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "start:worker": "node dist/worker.js",
        "dev": "ts-node-dev --transpile-only --respawn src/server.ts",
        "dev:worker": "ts-node-dev --transpile-only --respawn src/worker.ts",
        "queue": "ts-node-dev --transpile-only --respawn src/queue.ts"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "bullmq": "^5.57.0",
        "express": "^4.18.2",
        "ffmpeg-static": "^5.2.0",
        "fluent-ffmpeg": "^2.1.3",
        "ioredis": "^5.7.0",
        "mp4box": "^1.4.7",
        "multer": "^1.4.5-lts.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/fluent-ffmpeg": "^2.1.27",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.5.6",
        "@types/uuid": "^10.0.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.6"
    }
}
